{
  "$schema": "http://json-schema.org/schema",
  "$id": "Library",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "projectType": {
      "type": "string",
      "description": "project",
      "x-prompt": {
        "message": "What project would you like to use?",
        "type": "list",
        "items": ["photographer", "client", "admin", "landing", "shared"]
      }
    },
    "layer": {
      "type": "string",
      "description": "layer",
      "x-prompt": {
        "message": "What layer would you like to use?",
        "type": "list",
        "items": [
          "app",
          "page",
          "widget",
          "feature",
          "shared",
          "repository",
          "core",
          "api-model",
          "ui"
        ]
      }
    },
    "directory": {
      "type": "string",
      "description": "directory",
      "x-prompt": "What directory would you like to use?",
      "optional": true
    }
  },
  "required": ["name", "layer", "projectType"]
}
