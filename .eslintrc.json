{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "layer:application",
                "onlyDependOnLibsWithTags": [
                  "layer:page",
                  "layer:repository",
                  "layer:core",
                  "layer:shared",
                  "contract"
                ]
              },
              {
                "sourceTag": "layer:page",
                "onlyDependOnLibsWithTags": [
                  "layer:widget",
                  "layer:feature",
                  "layer:repository",
                  "contract",
                  "layer:shared",
                  "layer:core"
                ]
              },
              {
                "sourceTag": "layer:widget",
                "onlyDependOnLibsWithTags": [
                  "layer:feature",
                  "layer:repository",
                  "contract",
                  "layer:shared",
                  "layer:core"
                ]
              },
              {
                "sourceTag": "layer:feature",
                "onlyDependOnLibsWithTags": [
                  "layer:shared",
                  "layer:repository",
                  "contract",
                  "layer:core",
                  "layer:ui"
                ]
              },
              {
                "sourceTag": "layer:shared",
                "onlyDependOnLibsWithTags": [
                  "layer:repository",
                  "contract",
                  "layer:core",
                  "layer:ui"
                ]
              },
              {
                "sourceTag": "layer:repository",
                "onlyDependOnLibsWithTags": ["contract", "layer:core"]
              },
              {
                "sourceTag": "contract",
                "onlyDependOnLibsWithTags": []
              },
              {
                "sourceTag": "layer:ui",
                "onlyDependOnLibsWithTags": []
              },
              {
                "sourceTag": "layer:core",
                "onlyDependOnLibsWithTags": ["contract", "layer:ui"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
